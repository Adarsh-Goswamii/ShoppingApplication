<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#10000000"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="#10000000"
    android:padding="10dp"
    android:layout_height="match_parent">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radio_group"
        android:background="@drawable/stylles"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Options"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/text_payment"
                android:layout_centerHorizontal="true"
                />

            <LinearLayout
                android:layout_below="@+id/text_payment"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:id="@+id/linear_layout1"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google Pay"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/radio_google_pay"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Credit Card"
                    android:id="@+id/radio_credit_card"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/linear_layout1">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/radio_debit_card"
                    android:text="Debit Card"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/radio_cash_on_delivery"
                    android:text="Cash On Delivery"
                    android:layout_marginLeft="30dp"
                    />

            </LinearLayout>
        </RelativeLayout>
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio_group"
        android:background="@drawable/stylles"
        android:id="@+id/relative_layout_summary"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Payment Summary"
            android:textColor="#000000"
            android:id="@+id/text_summary"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items Name"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_below="@+id/text_summary"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/text_items"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Names"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:layout_below="@+id/text_items"
            android:id="@+id/text_item_names"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_below="@+id/text_item_names"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/text_number"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Names"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:layout_below="@+id/text_number"
            android:id="@+id/text_item_number"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_below="@+id/text_item_number"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/text_address"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:layout_below="@+id/text_address"
            android:id="@+id/text_item_address"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_below="@+id/text_item_address"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/text_total"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$$$$"
            android:textColor="@color/design_default_color_primary"
            android:textSize="16sp"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/text_total"
            android:layout_below="@+id/text_item_address"
            android:layout_marginTop="10dp"
            android:id="@+id/text_item_price"
            />

    </RelativeLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:id="@+id/frag3_next"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/relative_layout_summary"
        android:layout_marginRight="30dp"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/frag3_back"
        android:layout_below="@id/relative_layout_summary"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        />


</RelativeLayout>
</ScrollView>